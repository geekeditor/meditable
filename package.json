    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "dompurify": "^3.0.6",
    "flowchart.js": "^1.17.1",
    "highlight.js": "^11.9.0",
    "html-tags": "^3.3.1",
    "joplin-turndown-plugin-gfm": "^1.0.12",
    "js-base64": "^3.7.5",
    "js-md5": "^0.8.3",
    "katex": "^0.16.9",
    "mathjax": "^3.2.2",
    "mermaid": "^10.6.0",
    "plantuml-encoder": "^1.4.0",
    "snapsvg-cjs": "^0.0.6",
    "turndown": "^7.1.2",
